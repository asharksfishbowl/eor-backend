{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "module": "commonjs",
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/**/*.ts", // Include all TypeScript files in the src directory
    "src/types/**/*.d.ts", // Include all TypeScript definition files in the types directory
    "test/**/*.ts" // Include all TypeScript files in the test directory
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js" // Exclude JavaScript files
  ]
}
